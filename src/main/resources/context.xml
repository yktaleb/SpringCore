<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="com.epam.spring.Client">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="Taleb Yaroslav"/>
    </bean>

    <bean id="consoleEventLogger" class="com.epam.spring.ConsoleEventLogger"/>
    
    <bean id="fileEventLogger" class="com.epam.spring.FileEventLogger">
        <constructor-arg value=""/>
    </bean>

    <bean name="event" class="com.epam.spring.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="app" class="com.epam.spring.App">
        <constructor-arg ref="consoleEventLogger"/>
        <constructor-arg ref="client"/>
    </bean>
</beans>